---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Button from "~/components/Button.astro";
import Hero from "~/components/Hero.astro";
import Faq from "~/components/Faq.astro";
import Heading from "~/components/Heading.astro";
import { Image } from "astro:assets";
import WidgetSearch from "~/components/WidgetSearch.astro";

// Images
import ImageCarDealer from "~/assets/images/pexels-shkrabaanthony-7144179.jpg";
import ImageHeadingBackground from "~/assets/images/pexels-jeshoots-com-147458-451590.jpg";
---

<Layout>
	<Section class:list={"relative"}>
		<Image
			src={ImageHeadingBackground}
			alt="Heading background"
			class:list={"absolute inset-0 w-full h-full object-cover"}
		/>
		<div class="absolute inset-0 w-full h-full object-cover bg-gray-800/80"></div>
		<Container class:list={"relative z-10"}>
			<Heading class:list={'prose-invert'}>
				<h1 slot="heading-title" class="mb-0">Find your next car in our exclusive collection</h1>
				<p slot="heading-content">
					Search for your next car here. We have a wide range of cars for sale. Browse through our collection
					and find the perfect car that suits your needs and budget.
				</p>
			</Heading>
			<WidgetSearch />
		</Container>
	</Section>

	<Section>
		<Container>
			<Hero>
				<div slot="hero-left" class="prose lg:max-w-2xl">
					<h2>Welcome to our car dealer!</h2>
					<p>
						Find your next car here. We have a wide range of cars for sale. Browse through our collection
						and find the perfect car that suits your needs and budget.
					</p>

					<Button href="/cars" class:list={"mt-4"}>View all cars</Button>
				</div>
				<div slot="hero-right">
					<Image src={ImageCarDealer} alt="Car dealer" />
				</div>
			</Hero>
		</Container>
	</Section>

	<Section class:list={"bg-gray-50"}>
		<Container>
			<Hero invert>
				<div slot="hero-left" class="prose lg:max-w-2xl">
					<h2>Welcome to our car dealer!</h2>
					<p>
						Find your next car here. We have a wide range of cars for sale. Browse through our collection
						and find the perfect car that suits your needs and budget.
					</p>
				</div>
				<div slot="hero-right">
					<Image src={ImageCarDealer} alt="Car dealer" />
				</div>
			</Hero>
		</Container>
	</Section>

	<Section>
		<Container>
			<Heading class:list={"max-w-3xl mx-auto lg:text-center"}>
				<h2 slot="heading-title">Welcome to our car dealer!</h2>

				<p slot="heading-content">
					Find your next car here. We have a wide range of cars for sale. Browse through our collection and
					find the perfect car that suits your needs and budget.
				</p>
			</Heading>

			<Faq
				items={[
					{
						question: "What's the best thing about Switzerland?",
						answer: "I don't know, but the flag is a big plus. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas cupiditate laboriosam fugiat.",
					},
					{
						question: "What do you call a fake noodle?",
						answer: "An impasta. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas cupiditate laboriosam fugiat.",
					},
					{
						question: "What do you call a belt made out of watches?",
						answer: "A waist of time. Lorem ipsum dolor sit amet consectetur adipisicing elit. Quas cupiditate laboriosam fugiat.",
					},
				]}
			/>
		</Container>
	</Section>
</Layout>
